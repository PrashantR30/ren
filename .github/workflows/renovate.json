{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "onboarding": false,
  "platform": "github",
  "forkProcessing": "enabled",
  "prConcurrentLimit": 20,
  "prHourlyLimit": 20,
  "dependencyDashboard": true,
  "semanticCommits": "enabled",
  "automerge": false,
  "labels": ["dependencies"],
  "extends": ["config:recommended"],
  "separateMinorPatch": true,
  "dockerfile": {
    "enabled": false
  },
  "ignorePaths": [
    "**/*",
    "!embedded-bins/Makefile.variables"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "Makefile.variables"
      ],
      "matchStrings": ["alpine_version\\s*=\\s*(?<currentValue>\\S+)"],
      "depNameTemplate": "alpine",
      "versioningTemplate": "semver",
      "datasourceTemplate": "alpine"
    }
  ],
  "customDatasources": {
    "alpine": {
      "defaultRegistryUrlTemplate": "https://dl-cdn.alpinelinux.org/alpine/latest-stable/releases/x86_64/latest-releases.yaml",
      "format": "yaml",
      "transformTemplates": [
        "{\"releases\":[{\"version\": $$.[?(@.flavor == 'alpine-minirootfs')].version | [0],\"sourceUrl\":\"https://alpinelinux.org/\",\"changelogUrl\":\"https://alpinelinux.org/releases/\"}],\"sourceUrl\": \"https://alpinelinux.org/\",\"homepage\": \"https://alpinelinux.org/\"}"
      ]
    }
  }
}
